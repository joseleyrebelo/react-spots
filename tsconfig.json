{
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "target": "es6",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
		"preserveSymlinks": true,
		"noErrorTruncation": true,
		"pretty": true
  },
  "hooks": ["copy-files"],
  "include": [
    "src",
		"tests"
  ]
}
